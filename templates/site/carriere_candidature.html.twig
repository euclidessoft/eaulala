{% extends 'layout.html.twig' %}
{% block title %} {{ "Carrières"|trans }}  - Eau là là {% endblock %}
{% block carriere %}active{% endblock %}
{% block body %}
    <!-- Header Start -->

    <div class="services section-padding ">
        <div class="container">
            <div class="row justify-content-center py-5">
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success  mb-2 alert-dismissible fade show radius-10">
                        {{ message|trans }}
                    </div>
                {% endfor %}

                <div class="col-lg-6 ">
                    {{ form_start(form, {'attr':{'id': 'form'}}) }}
                    <div class="mt-4">
                        {{ form_row(form.nom, {'label': 'Nom', 'attr': {'placeholder':'Nom'}}) }}
                    </div>
                    <div class="mt-4">
                        {{ form_row(form.prenom, {'label': 'Prénom', 'attr': {'placeholder':'Prénom'}}) }}
                    </div>
                    <div class="mt-4">
                        {{ form_row(form.datnaiss, {'label': 'Date de naissance', 'attr': {'placeholder':'Date de naissance'}}) }}
                    </div>
                    <div class="mt-4">
                        {{ form_row(form.lieunaiss, {'label': 'Lieu de naissance', 'attr': {'placeholder':'Votre lieu de naissance'}}) }}
                    </div>
                    <div class="mt-4">
                        {{ form_row(form.activite, {'label': 'Votre domaine d\'activité', 'attr': {'placeholder':'Votre domaine activité'}}) }}
                    </div>
                    <div class="mt-4">
                        {{ form_row(form.niveau, {'label': 'Votre Niveau d\'etude', 'attr': {'placeholder':'Votre Niveau etude'}}) }}
                    </div>
                    <div class="mt-4">
                        {{ form_row(form.cv, {'label': false, 'attr': {'onchange':'label_input()'}}) }}
                        <button type="button" class="btn btn-primaire text-bold ms-0" onclick="upload()">
                            Selectionnez votre CV <i class="fa fa-upload ml-1"></i>
                        </button>
                        <label id="choice"></label>
                    </div>
                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-primaire btn-effect text-bold m-5 ms-0">
                            Soumettre <i class="fa fa-chevron-circle-right ml-1 mt-n1 align-middle"></i>
                        </button>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>




    <!-- About End -->
{% endblock %}
