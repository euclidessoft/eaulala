{% extends 'layout.html.twig' %}
{% block title %} {{ "Contactez-nous"|trans }} - Eaulàlà {% endblock %}
{% block contact %}active{% endblock %}
{% block body %}

    <div class="container-fluid mb-5 py-5">
        <div class="container">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success alert-dismissible fade show mb-5" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    {{ message|trans }}
                </div>
            {% endfor %}
            <div class="row g-5 h-100">
                <div class="col-lg-6 col-md-12 h-100 wow fadeInUp" data-wow-delay="0.5s">
                    {{ form_start(form, {'attr':{'id': 'form','class' : 'contact-form'}}) }}
                    <div class="row g-4 h-100">
                        <div class="col-md-6">
                            <div>
                                {{ form_row(form.nom, {'label': 'Votre Nom', 'attr': {'placeholder':''}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div>
                                {{ form_row(form.email, {'label': 'Votre Email', 'attr': {'placeholder':'Email'}}) }}
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div>
                                {{ form_row(form.sujet, {'label': 'Sujet', 'attr': {'placeholder':'Sujet'}}) }}
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div>
                                {{ form_row(form.message, {'label': 'Votre Message', 'attr': {'placeholder':'Message'}}) }}
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primaire w-100 mt-2 p-4" type="submit">
                                {{ "Envoyer"|trans }}
                            </button>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <h1 class="text-dark animated slideInDown mb-4">{{ "Contactez-nous"|trans }}</h1>
                    <p class="text-dark mb-4">
                        {{ "Merci de partager vos impressions avec Eaulàlà."|trans }}
                        {{ "Vous pouvez nous écrire pour n'importe quel besoin et nous nous ferons un plaisir de l'étudier."|trans }}
                    </p>
                    <p class="mb-4 fw-medium">
                        <i class="fa fa-map-marker-alt fa-2x me-2 text-primaire"></i>
                        Yaoundé, Cameroun
                    </p>
                    <p class="mb-4">
                        <a href="tel:+237693613696" class="text-dark fw-medium">
